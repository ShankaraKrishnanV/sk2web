@model BrainIQ.Models.Home
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link href="~/Content/DevCSS/ui-Brain.css" rel="stylesheet" />
<link href="~/Content/DevCSS/ui-layout.css" rel="stylesheet" />
<link href="~/Content/DevCSS/ui-theme.css" rel="stylesheet" />
<link href="~/Content/DevCSS/Common.css" rel="stylesheet" />
<div id="body" class="help-page">
    <script>
        /* Shankar - To enable/disable the module */
        function enableModule() {
            if (document.getElementById("divlogin").style.display == "block") {
                document.getElementById("divlogin").style.display = "none";
                document.getElementById("divStudent").style.display = "block";
                $("#divLoginForm").removeClass("active");
                $("#divMathsForStudent").addClass("active");
            }
            else {
                document.getElementById("divlogin").style.display = "block";
                document.getElementById("divStudent").style.display = "none";
                $("#divLoginForm").addClass("active");
                $("#divMathsForStudent").removeClass("active");
            }
        }

    </script>
    <div class="contentSec">
        <div class="content">
            <div class="rows">
                <div>
                    <ul class="nav nav-tabs">
                        <li id="divLoginForm" class="active"><a onclick="enableModule()">Login</a><span></span></li>
                        <li id="divMathsForStudent"><a onclick="enableModule()">Maths for Student</a><span></span></li>
                    </ul>
                </div>
                <div id="divlogin" class="tab-content" style="display: block;">
                    <div class="logOuter login">
                        <div class="rows">
                            <div class="clm6">
                                <div class="logLeft">
                                    <h1>Congrats</h1>
                                    <p>
                                        Your account is been activated.<br>
                                        Login now to explore the all<br>
                                        new experience of Digital Exam
                                    </p>
                                    <div class="infoBox bgGreen">
                                        <span>Join Brain IQ</span>

                                        @Html.ActionLink("Sign Up", "Home", "Index", new { @class = "btn btnGreen" })
                                    </div>
                                </div>
                            </div>
                            @using (Html.BeginForm("GetLogin", "Login", FormMethod.Post))
