                                <div class="clm6">
                                    <div class="logRight">

                                        <h2> Sign in</h2>

                                        <div class="formSec">
                                            <ul>
                                                <li>
                                                    @Html.EditorFor(model => model.UserName, new
                                                   {
                                                       htmlAttributes = new { @placeholder = "User Name", @class = "login-textbox" }
                                                   })
                                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                                </li>
                                                <li>
                                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = "Password", @class = "login-textbox" } })
                                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                </li>

                                            </ul>
                                        </div>
                                        <div class="btnHolder mT0">
                                            <input type="submit" class="btn btnBlue" value="Submit" />

                                            <div class="staySign">


                                            </div>
                                        </div>
                                        <div class="clear">
                                            <ul class="forgetLink">
                                                <li><a href="javascript:;">Forget Password?</a></li>
                                                <li><a href="javascript:;" class="">Trouble Logging in</a></li>
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                                }
