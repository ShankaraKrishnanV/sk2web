@model BrainIQ.Models.Home
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    @*<link href="~/Content/DevCSS/Login.css" rel="stylesheet" />*@

    <link rel="icon" type="image/x-icon" href="~/Content/assets/images/Favicon.ico">
    <link rel="apple-touch-icon" href="~/Content/assets/images/Favicon.ico">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/assets/images/Favicon.ico">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/assets/images/Favicon.ico">

    <link type="text/css" rel="stylesheet" href="~/Content/global/vendors/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/Content/global/vendors/simple-line-icons/simple-line-icons.css">
    <link type="text/css" rel="stylesheet" href="~/Content/global/vendors/bootstrap/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/Content/global/vendors/iCheck/skins/all.css">
    <link type="text/css" rel="stylesheet" href="~/Content/global/css/core.css">
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/system.css">

    <script src="~/Content/global/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/global/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Content/global/js/jquery-ui.js"></script>
    <script src="~/Content/global/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/global/vendors/bootstrap-hover-dropdown/bootstrap-hover-dropdown.js"></script>
    <script src="~/Content/global/js/html5shiv.js"></script>
    <script src="~/Content/global/js/respond.min.js"></script>
    <script src="~/Content/global/vendors/iCheck/icheck.min.js"></script>
    <script src="~/Content/global/vendors/iCheck/custom.min.js"></script>
    <!--CORE JAVASCRIPT-->
    <script src="~/Content/global/js/core.js"></script>
    <script src="~/Content/assets/js/system.js"></script>
</head>
<body class="page-signin" background="~/Content/Images/Wallpaper.jpg" style="padding-top:20px;">
    <div class="page-form">

        <div class="header-content text-center"><h1>Login to your account</h1></div>
        <div class="body-content">
            <div role="alert" class="alert alert-danger alert-dismissible alert-custom hide">
                <button type="button" data-dismiss="alert" class="close"><span>&times;</span></button>
                Enter any username and password.
            </div>
            <div class="list-group">

                @using (Html.BeginForm("GetLogin", "Login", FormMethod.Post))
                {
                    <div class="list-group-item">
                        @Html.EditorFor(model => model.UserName, new
                   {
                       htmlAttributes = new { @placeholder = "User Name", @class = "form-control", @required = "required" }
                   })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>


                    <div class="list-group-item" style="margin-bottom: 10px;">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = "Password", @class = "form-control", @required = "required", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group pull-left">
                        <label>
                            <input type="checkbox" class="form-control-shadow">&nbsp;
                            Remember me
                        </label>
                    </div>
                        <div class="form-group pull-right"><a href="#" class="btn-link">Forgotten your Password?</a></div>
                        <div class="clearfix"></div>
                        <div class="row">
                            <div class="col-sm-5">
                                <button type="submit" class="btn btn-success btn-circle btn-block btn-shadow mbs">Log in</button>
                            </div>
                            <div class="col-sm-7">
                                <a href="https://accounts.google.com/signin"
                                   class="btn btn-social btn-google-plus btn-circle btn-block btn-shadow mbs">
                                    <i class="fa fa-google-plus"></i>Login Gmail
                                </a>
                            </div>
                        </div>
                }
                <hr>
                <div class="form-group">
                    <p>
                        Don't want to go to home? <a id="btn-register" href="@Url.Action("Index","Home")" class="btn-link">Click here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
