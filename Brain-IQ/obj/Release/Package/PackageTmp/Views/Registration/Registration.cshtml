@model Brain_IQ.Models.Registration
@{
    ViewBag.Title = "Registration";
}

<style>
    .paddingTop {
        padding-top: 20px;
    }
    .error {
    color:red;
    }
     .field-validation-error {
        color:Red;
    }
</style>


@using (Html.BeginForm())
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
<script src="~/Scripts/jquery.datetimepicker.full.js"></script>
    <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />

  

    <div class="row" style="padding-top:20px">
        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-4">
                    <label>First Name</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Last Name</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>DOB</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.DOB, new { @class = "form-control" ,id="txtDOB"})
                    @Html.ValidationMessageFor(model => model.DOB)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Phone Number</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PhoneNo)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Email</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Password</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Confirm Password</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", type = "password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Address</label>
                </div>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Country</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Country)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>State</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.State, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.State)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>Pin</label>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.PostalCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PostalCode)
                </div>
            </div>
            <div class="form-group paddingTop">
                <div class="col-md-4">
                    <label>UserType</label>
                </div>
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.UserType, new SelectList(ViewBag.UserTypeList, "UserTypeId", "Type"))
                    @Html.ValidationMessageFor(model => model.UserType)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <button value="Submit">Register</button>
            @if (Convert.ToString(TempData["notice"]) != "")
            {
                <p style="color:red">@Convert.ToString(TempData["notice"])</p>
            }
        </div>
    </div>


    <script type="text/javascript">
    $(document).ready(function () {
        $('#txtDOB').datepicker();

    })
    </script>
}



