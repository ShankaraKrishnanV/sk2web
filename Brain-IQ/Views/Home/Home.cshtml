
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
    <title>ARV School</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="description" content="ARV School" />
    <meta name="keywords" content="jquery, circular menu, navigation, round, bubble" />

    <link href="~/Content/HomeThemes/css/style.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial;
            background: #fff url(../Content/HomeThemes/images/bg.png) no-repeat top left;
        }

        .title {
            width: 548px;
            height: 119px;
            position: absolute;
            top: 400px;
            left: 150px;
            background: transparent url(../Content/HomeThemes/images/title.png) no-repeat top left;
        }

        a.back {
            background: transparent url(../Content/HomeThemes/images/back.png) no-repeat top left;
            position: fixed;
            width: 150px;
            height: 27px;
            outline: none;
            bottom: 0px;
            left: 0px;
        }

        #content {
            margin: 0 auto;
        }
        h2{
            left: 46px !important;
        }
    </style>
</head>

<body>
    <div id="content">
        <a class="back"></a>
        <div class="title"></div>

        <div class="navigation" id="nav">
            <div class="item home">
                <img src="~/Content/HomeThemes/images/bg_home.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>Home</h2>
                <ul>
                    <li><a href="#">Portfolio</a></li>
                    <li><a href="#">Services</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
            <div class="item user">
                <img src="~/Content/HomeThemes/images/bg_user.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>User</h2>
                <ul>
                    <li><a href="@Url.Action("logins","logins", new { area = "" })">Login</a></li>
                    <li><a href="#">Properties</a></li>
                    <li><a href="#">Privacy</a></li>
                </ul>
            </div>
           
            <div class="item shop">
                <img src="~/Content/HomeThemes/images/bg_shop.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>Admission</h2>
                <ul>
                    <li><a href="#">LKG</a></li>
                    <li><a href="#">X Std</a></li>
                    <li><a href="#">XII Std</a></li>
                </ul>
            </div>
            <div class="item camera">
                <img src="~/Content/HomeThemes/images/bg_camera.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>Photos</h2>
                <ul>
                    <li><a href="#">School</a></li>
                    <li><a href="#">Sports</a></li>
                    <li><a href="#">Management</a></li>
                </ul>
            </div>
            <div class="item fav">
                <img src="~/Content/HomeThemes/images/bg_fav.png" alt="" width="199" height="199" class="circle" />
                <a href="#" class="icon"></a>
                <h2>Help</h2>
                <ul>
                    <li><a href="#">Query</a></li>
                    <li><a href="#">Support</a></li>
                    <li><a href="#">FAQ</a></li>
                </ul>
            </div>
           
        </div>
    </div>
    <!-- The JavaScript -->

    <script src="~/Content/HomeThemes/NewFolder1/jquery.min.js"></script>

    <script src="~/Content/HomeThemes/jquery.easing.1.3.js"></script>
    <script type="text/javascript">
            $(function() {
                $('#nav > div').hover(
                function () {
                    var $this = $(this);
                    $this.find('img').stop().animate({
                        'width'     :'199px',
                        'height'    :'199px',
                        'top'       :'-25px',
                        'left'      :'-25px',
                        'opacity'   :'1.0'
                    },500,'easeOutBack',function(){
                        $(this).parent().find('ul').fadeIn(700);
                    });

                    $this.find('a:first,h2').addClass('active');
                },
                function () {
                    var $this = $(this);
                    $this.find('ul').fadeOut(500);
                    $this.find('img').stop().animate({
                        'width'     :'52px',
                        'height'    :'52px',
                        'top'       :'0px',
                        'left'      :'0px',
                        'opacity'   :'0.1'
                    },5000,'easeOutBack');

                    $this.find('a:first,h2').removeClass('active');
                }
            );
            });
    </script>
</body>
</html>

